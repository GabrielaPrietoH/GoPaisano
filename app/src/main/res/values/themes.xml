<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ProyectoPaisanoGo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/amarillo</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Color secundario -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/amarillo</item>

        <!-- Fondo -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>


    <!-- Estilo para las fechas del CalendarView -->
    <style name="CalendarDateStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/holo_blue_bright</item>
    </style>

</resources>