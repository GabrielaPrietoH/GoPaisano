<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginEmpresa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.proyectopaisanogo.Presentation.FragmentLogin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/botonLogoutEmpresa"
            android:layout_width="276dp"
            android:layout_height="262dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="68dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="68dp"
            android:src="@drawable/paisano" />


        <EditText
            android:id="@+id/cajaPass"
            android:layout_width="289dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="63dp"
            android:layout_marginBottom="236dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/cajaCorreo"
            android:layout_width="284dp"
            android:layout_height="61dp"
            android:layout_below="@+id/botonLogoutEmpresa"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="73dp"
            android:layout_marginEnd="67dp"
            android:ems="10"
            android:hint="Usuario"
            android:inputType="text"
            android:textColorHighlight="#0353F4" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="94dp"
            android:layout_marginTop="306dp"
            android:layout_marginEnd="111dp"
            android:text="EMPRESAS"
            android:textAlignment="center"
            android:textColor="#1F38BF"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonLoginE"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="97dp"
            android:layout_marginEnd="103dp"
            android:layout_marginBottom="152dp"
            android:backgroundTint="#03A9F4"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="58dp"
            android:layout_marginBottom="92dp"
            android:text="Si no tienes cuenta"
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonRegistroE"
            android:layout_width="272dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="63dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#03A9F4"
            android:text="Registrarse"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </RelativeLayout>
</FrameLayout>