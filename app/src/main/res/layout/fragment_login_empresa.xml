<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginEmpresa"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/botonLogoutEmpresa"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_small"
            android:contentDescription="@string/salir_a_login_anterior"
            android:background="@drawable/round_corner"
            android:src="@drawable/paisano" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_small"
            android:text="@string/EMPRESAS"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#1731BF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cajaCorreo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="@dimen/size_extra_small"
            android:hint="@string/usuario"
            android:inputType="text"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/cajaPass"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="@dimen/size_extra_small"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:importantForAutofill="no" />


        <Button
            android:id="@+id/buttonLoginE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:layout_marginStart="@dimen/icon_size_medium"
            android:layout_marginEnd="@dimen/icon_size_medium"
            android:contentDescription="@string/boton_login"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_extra_small"
            android:text="@string/si_no_tienes_cuenta"
            android:textAlignment="center"
            android:textColor="@color/amarillo"
            android:textSize="@dimen/letter_big"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonRegistroE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:text="@string/registrarse"
            android:layout_marginStart="@dimen/icon_size_medium"
            android:layout_marginEnd="@dimen/icon_size_medium"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/buttom_letter" />

    </LinearLayout>
</FrameLayout>