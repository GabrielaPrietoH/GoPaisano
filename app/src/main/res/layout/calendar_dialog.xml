<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- SImple
        <CalendarView
            android:id="@+id/calendarViewDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dateTextAppearance="?android:attr/textAppearanceSmall" />
    -->

    <CalendarView
        android:id="@+id/calendarViewDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dateTextAppearance="@style/CalendarDateStyle" />

    <Button
        android:id="@+id/btnConfirmDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirmar_fecha"
        android:layout_marginTop="16dp" />
</LinearLayout>