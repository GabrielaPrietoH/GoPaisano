<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.proyectopaisanogo.Presentation.FragmentLogin">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="701dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="290dp"
            android:layout_height="126dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="61dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="277dp"
            android:forceDarkAllowed="true"
            android:text="@string/eres_cliente_o_empresa_largo"
            android:textAlignment="center"
            android:textColor="#EAC029"
            android:textSize="38sp" />


        <Button
            android:id="@+id/buttonEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonCliente"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="51dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="53dp"
            android:backgroundTint="#03A9F4"
            android:text="@string/empresa"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="78dp"
            android:backgroundTint="#03A9F4"
            android:text="@string/cliente"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="77dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="80dp"
            android:src="@drawable/paisano" />

    </RelativeLayout>
</FrameLayout>