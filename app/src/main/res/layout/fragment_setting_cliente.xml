<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.proyectopaisanogo.Presentation.settingCliente">

    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <!-- Contenido principal -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textSettingCliente"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="242dp"
                android:layout_marginTop="68dp"
                android:layout_marginEnd="28dp"
                android:text="@string/setting"
                android:textAlignment="center"
                android:textColor="#FFC107"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="219dp"
                android:layout_height="188dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="187dp"
                android:src="@drawable/paisano" />

            <EditText
                android:id="@+id/editTextTextPasswordSettingC"
                android:layout_width="316dp"
                android:layout_height="57dp"
                android:layout_below="@+id/imageView7"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="62dp"
                android:ems="10"
                android:hint="@string/modificar_password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/editTextTextEmailC"
                android:layout_width="351dp"
                android:layout_height="62dp"
                android:layout_below="@+id/editTextTextPasswordSettingC"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="33dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="27dp"
                android:ems="10"
                android:hint="@string/modificar_email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/editTextPhoneC"
                android:layout_width="264dp"
                android:layout_height="61dp"
                android:layout_below="@+id/editTextTextEmailC"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="113dp"
                android:ems="10"
                android:hint="@string/modificar_telefono"
                android:inputType="phone" />

            <EditText
                android:id="@+id/editTextAddressC"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_below="@+id/editTextPhoneC"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="168dp"
                android:ems="10"
                android:hint="@string/modificar_codigo_postal"
                android:inputType="textEmailAddress" />

            <Button
                android:id="@+id/buttonGuardarCambiosC"
                android:layout_width="191dp"
                android:layout_height="68dp"
                android:layout_below="@+id/editTextAddressC"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="101dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="118dp"
                android:backgroundTint="#03A9F4"
                android:text="@string/guardar_cambios"
                android:textColor="@color/white" />

        </RelativeLayout>

    </LinearLayout>

    <!-- NavigationView -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu" />

</androidx.drawerlayout.widget.DrawerLayout>