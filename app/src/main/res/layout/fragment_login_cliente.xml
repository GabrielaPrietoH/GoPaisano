<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginCliente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginCliente">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="271dp"
            android:layout_height="233dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="90dp"
            android:src="@drawable/paisano" />

        <EditText
            android:id="@+id/cajaCorreo"
            android:layout_width="252dp"
            android:layout_height="58dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="88dp"
            android:ems="10"
            android:hint="@string/usuario"
            android:inputType="text" />

        <EditText
            android:id="@+id/cajaPass"
            android:layout_width="257dp"
            android:layout_height="56dp"
            android:layout_below="@+id/cajaCorreo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="69dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="84dp"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="188dp"
            android:layout_height="61dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="97dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="125dp"
            android:text="@string/clientes"
            android:textAlignment="center"
            android:textColor="#1731BF"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="238dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="98dp"
            android:layout_marginBottom="78dp"
            android:text="@string/si_no_tienes_cuenta"
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewRegistroC"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="104dp"
            android:layout_marginEnd="111dp"
            android:layout_marginBottom="28dp"
            android:text="@string/registrarse"
            android:textAlignment="center"
            android:textColor="#2F44B8"
            android:textSize="34sp" />

        <Button
            android:id="@+id/buttonLoginC"
            android:layout_width="207dp"
            android:layout_height="62dp"
            android:layout_above="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="102dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="9dp"
            android:backgroundTint="#03A9F4"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>

</FrameLayout>