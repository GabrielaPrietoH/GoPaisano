<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginCliente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.proyectopaisanogo.Presentation.loginCliente">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/botonLogoutCliente"
            android:layout_width="276dp"
            android:layout_height="262dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="68dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="68dp"
            android:background="@drawable/round_corner"
            android:src="@drawable/paisano" />

        <EditText
            android:id="@+id/cajaCorreo"
            android:layout_width="252dp"
            android:layout_height="58dp"
            android:layout_below="@+id/botonLogoutCliente"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="74dp"
            android:layout_marginTop="79dp"
            android:layout_marginEnd="84dp"
            android:ems="10"
            android:hint="@string/usuario"
            android:inputType="text" />

        <EditText
            android:id="@+id/cajaPass"
            android:layout_width="257dp"
            android:layout_height="56dp"
            android:layout_below="@+id/cajaCorreo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="69dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="84dp"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="211dp"
            android:layout_height="58dp"
            android:layout_below="@+id/botonLogoutCliente"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="97dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="103dp"
            android:text="@string/clientes"
            android:textAlignment="center"
            android:textColor="#1731BF"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="39dp"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="98dp"
            android:text="Si no tienes cuenta"
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonRegistroC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="66dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="33dp"
            android:backgroundTint="#03A9F4"
            android:text="Registrarse"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonLoginC"
            android:layout_width="207dp"
            android:layout_height="62dp"
            android:layout_above="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="118dp"
            android:layout_marginEnd="114dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#03A9F4"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>

</FrameLayout>