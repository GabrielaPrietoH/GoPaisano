<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginCliente">

    <RelativeLayout
        android:id="@+id/clientes"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="271dp"
            android:layout_height="233dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="90dp"
            android:src="@drawable/paisano" />

        <EditText
            android:id="@+id/editTextTextUsuarioC"
            android:layout_width="252dp"
            android:layout_height="58dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="72dp"
            android:layout_marginTop="126dp"
            android:layout_marginEnd="86dp"
            android:ems="10"
            android:hint="Usuario"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextTextPasswordC"
            android:layout_width="257dp"
            android:layout_height="56dp"
            android:layout_below="@+id/editTextTextUsuarioC"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="69dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="84dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="162dp"
            android:layout_height="53dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="119dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="130dp"
            android:text="CLIENTES"
            android:textAlignment="center"
            android:textColor="#1731BF"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="175dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="114dp"
            android:layout_marginEnd="121dp"
            android:layout_marginBottom="82dp"
            android:text="Si no tienes cuenta"
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textRegistrarseC"
            android:layout_width="132dp"
            android:layout_height="31dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="131dp"
            android:layout_marginEnd="147dp"
            android:layout_marginBottom="43dp"
            android:text="Registrarse"
            android:textAlignment="center"
            android:textColor="#2F44B8"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonLoginC"
            android:layout_width="207dp"
            android:layout_height="62dp"
            android:layout_above="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="107dp"
            android:layout_marginEnd="126dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#03A9F4"
            android:text="LOGIN"
            android:textColor="@color/white" />
    </RelativeLayout>

</FrameLayout>