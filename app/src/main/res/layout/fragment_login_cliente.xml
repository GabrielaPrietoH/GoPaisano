<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginCliente"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_login"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/botonLogoutCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/icon_size_medium"
            android:background="@drawable/round_corner"
            android:src="@drawable/paisano"
            android:contentDescription="@string/salir_a_login_anterior" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_small"
            android:text="@string/clientes"
            android:textAlignment="center"
            android:textColor="@color/blueDark"
            android:textSize="34sp"
            android:fontFamily="@font/heading_now_trial_bold"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cajaCorreo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_large"
            android:layout_margin="@dimen/buttom_letter"
            android:hint="@string/usuario"
            android:inputType="text"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/cajaPass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_large"
            android:layout_margin="@dimen/buttom_letter"
            android:hint="@string/password"
            android:inputType="textPassword"
            tools:ignore="Autofill" />

        <Button
            android:id="@+id/buttonLoginCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/icon_size_medium"
            android:layout_marginEnd="@dimen/icon_size_medium"
            android:backgroundTint="@color/blue"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/buttom_letter" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_extra_small"
            android:text="@string/si_no_tienes_cuenta"
            android:textAlignment="center"
            android:textColor="@color/amarillo"
            android:textSize="@dimen/letter_big"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonRegistroCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/icon_size_medium"
            android:layout_marginEnd="@dimen/icon_size_medium"
            android:backgroundTint="@color/blue"
            android:text="@string/registrarse"
            android:textColor="@color/white"
            android:textSize="@dimen/buttom_letter" />

    </LinearLayout>

</FrameLayout>
