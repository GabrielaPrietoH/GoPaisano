<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.proyectopaisanogo.Presentation.calendarioEmpresa"
    android:orientation="vertical">

    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarCalendarioEmpresa"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_extra_small"
                android:layout_weight="1"
                android:text="@string/calendario_citas_empresa"
                android:textAlignment="center"
                android:textColor="#2196F3"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="189dp"
                android:layout_height="146dp"
                android:src="@drawable/paisano"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <!-- CalendarView para mostrar el calendario de la empresa -->
        <CalendarView
            android:id="@+id/empresaCalendarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>  <!-- Utiliza layout_weight para asegurar que el CalendarView utilice la mayoría del espacio vertical disponible -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- TextView para mostrar información sobre la cita seleccionada -->
            <TextView
                android:id="@+id/tvCitaInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/size_extra_small"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/typo_irregular"
                android:text="@string/detalles_de_la_cita" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>